
<h1>All Items</h1>

<table style="width:90%, text-align:left">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
<div class="item<%= item.id %>"
    <td><%= link_to item.name, admin_item_path(item) %></td>
    <td><%= item.description %></td>
    <td><%= image_tag item.image_url %></td>
    <td><%= item.price %></td>
    <td><%= item.retired %></td>
    <td><%= link_to "Edit", edit_admin_item_path(item) %></td>
  </tr>
</div>
    <% end %>
</table>
