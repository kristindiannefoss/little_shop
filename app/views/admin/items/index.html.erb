<div class="cart">
  <div class="container">
    <div class="cart-top">
      <h1>All Items</h1>
    </div>
    <div class="cart-conclusion">

      <table>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Retired?</th>
          <th>Action</th>
        </tr>
        <% @items.each do |item| %>
          <tr class="item<%= item.id %>">
            <td><%= link_to item.name, "items/:id" %></td>
            <td><%= item.description %></td>
            <td><%= image_tag item.avatar.url(:square) %></td>
            <td><%= number_to_currency(item.price) %></td>
            <td><%= item.retired %></td>
            <td><%= link_to "Edit", edit_admin_item_path(item) %></td>
          </tr>
        <% end %>
        <tr>
        </tr>
      </table>
    </div>
  </div>
</div>
