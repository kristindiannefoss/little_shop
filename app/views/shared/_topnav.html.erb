<div class="container">
   <div class="header">
         <div class="logo">
         <a href="/"><%= image_tag "logo.png" %></a>
       </div>
      <div class="top-nav">
        <ul class="nav">
        <% if current_admin? %>
          <li><%= link_to "Admin Dashboard", admin_dashboard_path, class:"morebtn" %></li>
          <li><%= link_to "Items", admin_items_path, class:"morebtn" %></li>
          <li><%= button_to "Logout", logout_path, method: "delete", class:"morebtn" %></li>
        <% elsif current_user %>
          <li><%= link_to "Shop", items_path, class:"morebtn" %></li>
          <li><%= link_to "Dashboard", dashboard_path, class:"morebtn" %></li>
          <li><%= button_to "Logout", logout_path, method: "delete", class:"morebtn" %></li>
          <a class="shop" href="<%= cart_path %>"><%= image_tag "cart.png" %> &nbsp;<%= @cart.count_all %></a>
        <% else %>
          <li><%= link_to "Shop", items_path, class:"morebtn" %></li>
          <li><%= link_to "Create Account", new_user_path, class:"morebtn" %></li>
          <li><%= link_to "Login", login_path, class:"morebtn" %></li>
          <a class="shop" href="<%= cart_path %>"><%= image_tag "cart.png" %> &nbsp;<%= @cart.count_all %></a>
        <% end %>
    </ul>
     </div>
     <div class="clearfix"></div>
   </div>
</div>
