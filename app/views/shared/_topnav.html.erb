<div class="container">
   <div class="header">
         <div class="logo">
         <a href="/"><%= image_tag "logo.png" %></a>
       </div>
      <div class="top-nav">
        <% if current_admin? %>
          <li><%= link_to "Items", admin_items_path, class:"morebtn" %></li>
          <li><%= link_to "Logout", logout_path, method: :delete, class:"morebtn" %></li>
        <% else %>
