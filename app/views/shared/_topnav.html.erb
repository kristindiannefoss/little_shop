            <li><%= link_to "Logout", logout_path, method: :delete, class:"morebtn" %></li>
            <li><%= link_to "Dashboad", dashboard_path, class:"morebtn" %></li>
          <% else %>
            <li><%= link_to "Login", login_path, class:"morebtn" %></li>
            <li><%= link_to "Create Account to Checkout", new_user_path, class:"morebtn" %></li>
        <% end %>
      <% end %>
     </div>
