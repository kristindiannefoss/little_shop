<h1>Order Number:<%= @order.id %></h1>
<h4>Order Date:<%= @order.created_at %></h4>
<h4>Order Status:<%= @order.status %>:
  <% if @order.status == "cancelled" || "completed" %>
  <%= @order.updated_at %>
  <% end %>
</h4>

  <table>
    <th>
      <td>
        Name
      </td>
      <td>
        Quantity
      </td>
      <td>
        Price
      </td>
      <td>
        Subtotal
      </td>
    </th>
    <% @order_items.each do |order_item| %>
      <tr>
        <td>
          <%= link_to order_item.item.name, item_path(order_item.item) %>
        </td>
        <td>
          <%= order_item.quantity %>
        </td>
        <td>
          <%= order_item.item.price %>
        </td>
        <td>
          <%= order_item.subtotal %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan=4>
        Order Total: <%#= number_to_currency(@order.total) %>
      </td>

    </tr>

  </table>
