<div class="cart">
	<div class="container">
		<div class="cart-top">
      <h4>Order Number:<%= @order.id %></h4>
    </div>
      <h5>Order Date:<%= @order.created_at %></h5>
      <h5>Order Status: <%= @order.status %></h5>
      <% if @order.status == "cancelled" || @order.status == "completed" %>
        <%= @order.updated_at %>
      <% end %>

  <table border="1" width="500px">
    <tr>
      <th>
        Name
      </th>
      <th>
        Quantity
      </th>
      <th>
        Price
      </th>
      <th>
        Subtotal
      </th>
    </tr>
    <% @order_items.each do |order_item| %>
      <tr>
        <td>
          <%= link_to order_item.item.name, item_path(order_item.item) %>
        </td>
        <td>
          <%= order_item.quantity %>
        </td>
        <td>
          <%= order_item.item.price %>
        </td>
        <td>
          <%= order_item.subtotal %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan=4>
        Order Total: <%= number_to_currency(@order.total_price) %>
      </td>

    </tr>

  </table>
