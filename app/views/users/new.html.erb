<h1>Create an account</h1>

<%= form_for @user do |f| %>
<%= f.text_field :first_name, placeholder: "First_name" %>
<%= f.text_field :last_name, placeholder: "Last_name" %>
<%= f.text_field :email, placeholder: "Email" %>
<%= f.text_field :city, placeholder: "City" %>
<%= f.text_field :state, placeholder: "State" %>
<%= f.text_field :zipcode, placeholder: "Zipcode" %>
<%= f.text_field :password, placeholder: "Password" %>

  <%= f.submit "Create Account"%>

<% end %>
